# PostgreSQL Configuration
POSTGRES_DB=opencourse_dev
POSTGRES_USER=opencourse_user
POSTGRES_PASSWORD=opencourse_password
POSTGRES_PORT=5432
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}

# Better Auth Configuration
BETTER_AUTH_SECRET=your_secret_key_here

# Documentation Configuration
ENABLE_DOCS=true              # Set to false in production to disable completely
PROTECT_DOCS=true             # Enable basic auth protection when docs are enabled  
DOCS_USERNAME=admin
DOCS_PASSWORD=your_secure_password_here

# Server Configuration
NODE_ENV=development
PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
TRUSTED_ORIGINS=http://localhost:3000


#Cloudflare R2
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET=opencourse-storage
R2_PUBLIC_DOMAIN=https://cdn.yourdomain.com
